
  {{#if posts.length}}
{{#each posts as |post|}}
    <body class="bg-gray-100 text-gray-700  font-sans quicksand">

        <div class="p-0 max-w-full">
          <div class="grid md:grid-cols-2 sm:grid-cols-1 lg:grid-cols-1 m-5 mb-10">
      
      
                  <div class="bg-white overflow-hidden hover:bg-green-100 border border-gray-200 p-3">
              <div class="m-2 text-justify text-sm">
                  <p class="text-right text-xs">{{this.user.username}}
                      {{format_date date_created}}
                      </p>
          <div class ="display: flex justify-content: flex-end align-content: flex-end align-items: flex-end flex-direction: row-reverse">
          <button class="bg-red-400 hover:bg-red-500 p-2 rounded-full shadow-md display: flex justify-content: flex-end align-content: flex-end align-items: flex-end flex-direction: row-reverse delete" id="delete">
        <svg class="text-white toggle__lock w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      </div>
                  <p class="text-right text-xs">{{user.username}}</p>
                  <h2 class="font-bold text-lg h-2 mb-8">{{post_title}} </h2>
                  <p class="text-xs">
                  {{post_text}}
                  </p>
      
              </div>
              <div class="w-full text-right mt-4">
                <a class="text-green-400 uppercase font-bold text-sm" href="/posts/{{id}}">Comments</a>
              </div>
          </div>
          {{/each}}
      </body>

{{else}}
<h6 class="pb-4 has-text-centered is-italic">you do not currently have any posts</h6>

{{/if}}
<script src="./js/delete-post.js"></script>